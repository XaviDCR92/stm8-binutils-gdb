 		  &remote_show_cmdlist, "show remote ",
 		  0 /* allow-unknown */, &showlist);
 
+//akre
+  add_setshow_boolean_cmd ("run-connect", class_support,
+			   &remote_run_connect, _("\
+Enable connecting to localhost:3333 with run command."), _("		\
